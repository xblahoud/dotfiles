alias o='gio open'

# Suffix aliases
alias -s pdf=evince

# Global aliases
alias -g G="| grep"
alias -g L="| less"

# Custom commands
alias devpurity='ssh -t -X dev "cd $PURITY_DIR && zsh --login"'

# Screen configs
alias at-home='autorandr work && xrandr --output eDP-1 --noprimary'
alias at-work='autorandr work-rotated && xrandr --output eDP-1 --noprimary'
alias glog='git g'


